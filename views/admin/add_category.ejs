<%- include('../partials/admin_header.ejs') %>


<h2 class="page-title">Add a category</h2><br>
<a href="/admin/categories" class="btn btn-primary">Back to all categories</a>
<br><br>

<form method="POST" action="/admin/categories/add-category">
 
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= title %>" placeholder="Title">
  </div>

  <button class="btn btn-primary">Submit</button>
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" >

</form>


<%- include('../partials/admin_footer.ejs') %>