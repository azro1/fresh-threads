<%- include('../partials/admin_header.ejs') %>


<h2 class="page-title">Add a page</h2><br>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
<br><br>


<form method="POST" action="/admin/pages/add-page">
 
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= title %>" placeholder="Title">
  </div>
    
  <div class="form-group">
    <label for="slug">Slug</label>
    <input type="text" class="form-control" id="slug" name="slug" value="<%= slug %>" placeholder="Slug">
  </div>
    
  <div class="form-group">
  <label for="content">Content</label>     <!-- "ta" ref for jQuery in main.js for wysiwyg CKEditor-->
    <textarea id="content" name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
  </div>
  
  <button class="btn btn-default">Submit</button>
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

</form>


<%- include('../partials/admin_footer.ejs') %>