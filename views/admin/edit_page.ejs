<%- include('../partials/admin_header.ejs') %>


<h2 class="page-title">Edit a page</h2><br>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
<br><br>


<form method="POST" action="/admin/pages/edit-page/<%= id %>">
 
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= title %>" placeholder="Title">
  </div>
    
  <div class="form-group">
    <label for="slug">Slug</label>
    <input type="text" class="form-control" id="slug" name="slug" value="<%= slug %>" placeholder="Slug">
  </div>
    
  <div class="form-group">
    <label for="ta">Content</label>
    <textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
  </div>
   
  <button class="btn btn-primary">Submit</button>
    
</form>


<%- include('../partials/admin_footer.ejs') %>